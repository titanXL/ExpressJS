doctype
html
  head
    title Blog System
    link(href="/css/style.css", rel="stylesheet")
  body
    .container
      ul.menu
        li
          a(href="/") Home
        li
          a(href="/about") About
        li
          a(href="/article/list") List All
        if (currentUser)
          li
            a(href="/profile") Profile
          li
            a(href='/article/add') Add Article
          li.delimiter
          li
            span #{currentUser}
          li
            form#logout-form(method="POST" action="/users/logout")
              a(href="javascript:document.getElementById('logout-form').submit()") Logout
        else
          li
            a(href="/users/register") Register
          li
            a(href="/users/login") Login
      if (globalError)
        h3 #{globalError}
      block main-content
