extends Layout

block content
  ul.errors
    if errors
      each error,i in errors
        li.alert.alert-danger #{error.msg}
  form(method='post', action='/create')
    .form-group
      Label Name
      input.form-control(name='name', type='text', placeholder='Enter your name')
    .form-group
      Label Username
      input.form-control(name='username', type='text', placeholder='Enter your username')
    .form-group
      Label Email
      input.form-control(name='email', type='email', placeholder='Enter your email')
      input.btn.btn-primary(name='button', type='submit', value='ADD')    